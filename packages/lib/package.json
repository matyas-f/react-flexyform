{
  "name": "react-flexyform",
  "version": "0.0.1",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsup --config ./tsup.esm.ts --env.DEVTOOLS true && tsup --config ./tsup.dts.ts --env.DEVTOOLS true",
    "build:prod": "rm -rf dist && tsup --config ./tsup.esm.ts && tsup --config ./tsup.dts.ts",
    "eslint": "eslint --report-unused-disable-directives --max-warnings 0",
    "eslint:fix": "eslint . --ext ts,tsx --fix",
    "lint-staged": "lint-staged",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm eslint",
      "pnpm prettier"
    ],
    "!(*.js|*.jsx|*.ts|*.tsx}": [
      "pnpm prettier"
    ]
  },
  "dependencies": {
    "clsx": "2.1.1",
    "date-fns": "3.6.0",
    "fast-deep-equal": "3.1.3",
    "immer": "10.1.1",
    "lodash": "4.17.21",
    "nanoid": "5.1.3",
    "phone": "3.1.58",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "3.0.2",
    "zustand": "4.5.6"
  },
  "devDependencies": {
    "@react-flexyform/config": "workspace:*",
    "@types/lodash": "4.17.16",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "lint-staged": "15.4.3"
  }
}
